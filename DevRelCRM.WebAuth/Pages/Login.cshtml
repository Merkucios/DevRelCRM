@page
@model DevRelCRM.WebAuth.Pages.LoginModel
@{
}

<!DOCTYPE html>
<html lang="ru">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Вход в систему</title>
    @* Добавить иконку сайта собственную *@
    <link rel="shortcut icon" href="http://localhost:3000/icon-site.png" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
</head>

<body class="bg-light">

    <div class="container mt-4">
        <div class="row justify-content-md-center">
            <div class="text-center my-4">
                @* Добавить собственное название DevRelCRM *@
                <img src="https://static.tildacdn.com/tild3066-6132-4163-a631-316132323362/DevRel.svg" alt="logo"
                    width="200">
            </div>
            <div class="col-md-6">
                <div class="card shadow-lg">
                    <div id="main" class="card-body p-5">
                        <h1 class="fs-4 card-title fw-bold mb-4 text-center">Логин</h1>
                        <form method="post" autocomplete="off">
                            <div class="form-group">
                                <label asp-for="Input.NickName" class="col-form-label">Никнейм:</label>
                                <input asp-for="Input.NickName" class="form-control" required autofocus />
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Password" class="col-form-label">Пароль:</label>
                                <input asp-for="Input.Password" id="password" type="password" class="form-control"
                                    required autofocus />
                            </div>
                            <button type="submit" class="btn btn-outline-dark mt-3 float-end">Войти</button>
                        </form>
                    </div>
                    <div id="login" class="card-footer py-3 border-0">
                        <div class="text-center">
                            Заинтересован системой? <a asp-page="./Registration"
                                class="text-black">Зарегистрироваться</a>
                        </div>
                    </div>
                </div>
            </div>
</body>
</html>
